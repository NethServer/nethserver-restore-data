backup=$1
log=$2 # not used
exit_code=$3
epoch=$4

# check if backup status is success
if [ $exit_code -gt 0 ]; then
    exit 0
fi

/sbin/e-smith/backup-data-list -b ${backup} -f | /usr/bin/gzip -9 > "/var/lib/nethserver/backup/restore/${backup}@${epoch}.gz"
